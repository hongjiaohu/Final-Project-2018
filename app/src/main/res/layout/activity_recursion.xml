<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comhongjiaohu.httpsgithub.finalproject.Recursion">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_description1"
        android:text="This is a recursion game for people to spend time. \nYou can test whether a word is a palindrome."
        android:padding="16dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_user_input"
        android:layout_below="@id/tv_description1"
        android:inputType="text"
        android:hint="Please Enter A Word to Check"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_error_message"
        android:layout_below="@id/et_user_input"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#BB0000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_result"
        android:layout_below="@+id/et_user_input"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textSize="20sp"
        android:textColor="#0000BB"/>

</RelativeLayout>
